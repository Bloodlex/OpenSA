{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OpenSA",
            "type": "clr",
            "linux": {
                "type": "mono"
            },
            "osx": {
                "type": "mono"
            },
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/engine/bin/OpenRA.exe",
            "args": [
                "Engine.EngineDir=${workspaceRoot}/engine/",
                "Engine.ModSearchPaths=${workspaceRoot}/mods",
                "Game.Mod=sa",
                "Debug.DisplayDeveloperSettings=true",
            ]
        },
    ]
}
